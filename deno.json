{
    "importMap": "./import_map.json",
    "lint": {
        "files": {
            "include": [
                "src/",
                "scripts/",
                "tests/"
            ]
        }
    },
    "fmt": {
        "files": {
            "include": [
                "src/",
                "scripts/",
                "tests/"
            ]
        },
        "options": {
            "useTabs": true,
            "singleQuote": true
        }
    },
    "compilerOptions": {
        "lib": [
            "ES2017",
            "DOM",
            "ES2020",
            "deno.ns"
        ]
    },
    "tasks": {
        "dev": "./scripts/serve.ts",
        "build": "./scripts/build.ts",
        "lint": "deno lint src/ tests/ scripts/",
        "package-npm": "deno run -A ./scripts/package_npm.ts",
        "test": "deno run -A ./scripts/run_test.ts"
    }
}
